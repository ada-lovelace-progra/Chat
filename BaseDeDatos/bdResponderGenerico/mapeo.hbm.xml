<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping>

	<class name="bdResponderGenerico.RespuestaBD" table="Consultas">
		<id column="id" name="id" type="int" />
		<property column="clase" name="clase" type="string" />
		<property column="peticion" name="peticion" type="string" />
		<property column="respuesta" name="respuesta" type="string" />
	</class>
	
	<class name="bdResponderGenerico.ChuckBD" table="ChuckNorris">
		<id column="id" name="id" type="int" />
		<property column="fact" name="fact" type="string" />
		<property column="fechaLectura" name="fechaLectura" type="date" />
	</class>
	
	<class name="bdResponderGenerico.EventoBD" table="Eventos">
		<id column="id" name="id" type="int" />
		<property column="fecha" name="fecha" type="date" />
		<property column="descripcion" name="descripcion" type="string" />
	</class>
	
	<class name="bdResponderGenerico.ConversionBD" table="Conversion">
		<id column="id" name="id" type="int" />
		<property column="de" name="de" type="string" />
		<property column="a" name="a" type="string" />
		<property column="valor" name="valor" type="double" />
	</class>	
	
	<class name="bdResponderGenerico.UnidadesSMBD" table="UnidadesSM">
		<id column="abreviacion" name="abreviacion" type="string" />
		<property column="nombre" name="nombre" type="string" />
		<property column="tipo" name="tipo" type="string" />
		<property column="sistema" name="sistema" type="string" />
	</class>
		
	<class name="bdResponderGenerico.MemesBD" table="Memes">
		<id column="id" name="id" type="int" />
		<property column="key" name="key" type="string" />
		<property column="path" name="path" type="string" />
	</class>
	
	
</hibernate-mapping>